<!DOCTYPE html>
<html>
<head>
  <title>Approve Extra Class</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-10 bg-gray-100">
  <h1 class="text-3xl font-bold text-indigo-700 mb-6">Approve Extra Class Requests</h1>

  <table class="table-auto border-collapse border border-gray-400 w-full bg-white">
    <thead class="bg-gray-200">
      <tr>
        <th class="border px-4 py-2">ID</th>
        <th class="border px-4 py-2">Name</th>
        <th class="border px-4 py-2">Subject</th>
        <th class="border px-4 py-2">Status</th>
        <th class="border px-4 py-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% extraClassRequests.forEach(r => { %>
        <tr>
          <td class="border px-4 py-2"><%= r.id %></td>
          <td class="border px-4 py-2"><%= r.name %></td>
          <td class="border px-4 py-2"><%= r.subject %></td>
          <td class="border px-4 py-2 font-semibold"><%= r.status %></td>
          <td class="border px-4 py-2 flex space-x-2">
            <form method="POST" action="/principal/extra-class/<%= r.id %>/approve">
              <button class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">Approve</button>
            </form>
            <form method="POST" action="/principal/extra-class/<%= r.id %>/reject">
              <button class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700">Reject</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/principal/dashboard" class="text-blue-500 underline mt-6 inline-block">â¬… Back to Dashboard</a>
</body>
</html>
