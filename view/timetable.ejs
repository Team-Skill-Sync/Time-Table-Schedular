<% if (timetable.generated) { %>
  <div class="mt-10">
    <h2 class="text-2xl font-bold text-green-700 mb-4">Generated Timetable for <%= timetable.classname %></h2>
    <table class="table-auto border-collapse border border-gray-400 w-full bg-white">
      <thead>
        <tr class="bg-gray-200">
          <th class="border border-gray-400 px-4 py-2">Period</th>
          <th class="border border-gray-400 px-4 py-2">Monday</th>
          <th class="border border-gray-400 px-4 py-2">Tuesday</th>
          <th class="border border-gray-400 px-4 py-2">Wednesday</th>
          <th class="border border-gray-400 px-4 py-2">Thursday</th>
          <th class="border border-gray-400 px-4 py-2">Friday</th>
        </tr>
      </thead>
      <tbody>
        <% timetable.subjects.forEach((subject, i) => { %>
          <tr>
            <td class="border border-gray-400 px-4 py-2 font-semibold">Period <%= i+1 %></td>
            <td class="border border-gray-400 px-4 py-2"><%= subject %></td>
            <td class="border border-gray-400 px-4 py-2"><%= subject %></td>
            <td class="border border-gray-400 px-4 py-2"><%= subject %></td>
            <td class="border border-gray-400 px-4 py-2"><%= subject %></td>
            <td class="border border-gray-400 px-4 py-2"><%= subject %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Download buttons -->
    <div class="mt-6 flex space-x-4">
      <a href="/principal/timetable/pdf"
         class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        Download PDF
      </a>
      <a href="/principal/timetable/excel"
         class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
        Download Excel
      </a>
    </div>
  </div>
<% } %>
